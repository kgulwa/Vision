<div class="max-w-xl mx-auto p-6">

  <h1 class="text-2xl font-bold mb-4">Search Users</h1>

  <%= form_with url: search_path, method: :get, local: true, class: "mb-6" do %>
    <input 
      type="text" 
      name="query" 
      value="<%= params[:query] %>"
      placeholder="Search usernameâ€¦" 
      class="w-full px-4 py-2 border rounded-lg"
    >
  <% end %>

  <% if @users.any? %>
    <div class="space-y-4">
      <% @users.each do |user| %>
        <%= link_to user_path(user.id), class: "flex items-center space-x-3 p-3 hover:bg-gray-100 rounded-lg" do %>
          <div class="font-semibold text-gray-900"><%= user.username %></div>
        <% end %>
      <% end %>
    </div>
  <% elsif params[:query].present? %>
    <p class="text-gray-500">No users found.</p>
  <% end %>

</div>
