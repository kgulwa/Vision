<div class="max-w-7xl mx-auto">
  <!-- Profile Header -->
  <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
    <div class="flex items-start justify-between">
      <div class="flex items-center space-x-6">
        <div class="w-32 h-32 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-5xl shadow-lg">
          <%= @user.username[0].upcase %>
        </div>
        
        <div>
          <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= @user.username %></h1>
          <p class="text-gray-600 mb-4"><%= @user.email %></p>
          
          <div class="flex items-center space-x-6 text-sm">
            <div>
              <span class="font-bold text-gray-900"><%= @user.pins.count %></span>
              <span class="text-gray-600">Pins</span>
            </div>
            <div>
              <span class="font-bold text-gray-900"><%= @user.followers.count %></span>
              <span class="text-gray-600">Followers</span>
            </div>
            <div>
              <span class="font-bold text-gray-900"><%= @user.following.count %></span>
              <span class="text-gray-600">Following</span>
            </div>
          </div>
        </div>
      </div>

      <% if logged_in? %>
        <% if @user == current_user %>
          <%= link_to edit_user_path(@user), class: "px-6 py-2 border border-gray-300 text-gray-700 font-medium rounded-full hover:bg-gray-50" do %>
            Edit Profile
          <% end %>
        <% else %>
          <% if current_user.following?(@user) %>
            <%= button_to user_follow_path(@user), method: :delete, class: "px-6 py-3 bg-gray-200 text-gray-700 font-semibold rounded-full hover:bg-gray-300" do %>
              Following
            <% end %>
          <% else %>
            <%= button_to user_follow_path(@user), method: :post, class: "px-6 py-3 bg-blue-600 text-white font-semibold rounded-full hover:bg-blue-700" do %>
              Follow
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Tabs -->
  <div class="mb-6">
    <div class="border-b border-gray-200">
      <nav class="flex space-x-8">
        <a href="#pins" class="border-b-2 border-blue-600 py-4 px-1 text-sm font-medium text-blue-600">
          Pins
        </a>
        <a href="#reposts" class="border-b-2 border-transparent py-4 px-1 text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
          Reposts
        </a>
      </nav>
    </div>
  </div>

  <!-- Pins Grid -->
  <div id="pins">
    <% if @pins.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <%= render partial: 'pins/pin_card', collection: @pins, as: :pin %>
      </div>
    <% else %>
      <div class="text-center py-12 bg-white rounded-xl">
        <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">No pins yet</h3>
        <% if logged_in? && @user == current_user %>
          <p class="text-gray-500 mb-4">Share your first pin with the world!</p>
          <%= link_to "Create Pin", new_pin_path, class: "inline-block px-6 py-2 bg-blue-600 text-white rounded-full hover:bg-blue-700" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>