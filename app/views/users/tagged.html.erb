<h1 class="text-2xl font-semibold mb-4"><%= @user.username %>'s Tagged Pins</h1>

<% if @pins.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">

    <% @pins.each do |pin| %>
      <%= link_to pin_path(pin), class: "block relative group rounded-xl overflow-hidden shadow-sm hover:shadow-lg bg-white transition" do %>

        <% if pin.image.attached? %>
          <%= image_tag pin.image, class: "w-full h-48 object-cover" %>
        <% else %>
          <div class="w-full h-48 bg-gray-100 flex items-center justify-center text-gray-400">
            No image
          </div>
        <% end %>

        <!-- Hover overlay (likes + comments) -->
        <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100
                    transition flex items-center justify-center space-x-6 text-white text-lg font-semibold">
          <span>â¤ï¸ <%= pin.likes.count %></span>
          <span>ğŸ’¬ <%= pin.comments.count %></span>
        </div>

        <!-- Tagged badge -->
        <div class="absolute bottom-2 right-2 bg-black/50 text-white text-xs px-2 py-1 rounded">
          Tagged
        </div>

      <% end %>
    <% end %>

  </div>

<% else %>
  <p class="text-gray-500"><%= @user.username %> is not tagged in any pins yet.</p>
<% end %>
