<div class="max-w-xl mx-auto bg-white rounded-xl shadow-lg p-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Create Account</h1>

  
  <%= form_with model: @user, local: true,
        html: { multipart: true }, data: { turbo: "false" },
        class: "space-y-6" do |f| %>

    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-200 p-4 rounded-lg">
        <h3 class="text-red-800 font-semibold mb-2">
          <%= pluralize(@user.errors.count, "error") %> prevented signup:
        </h3>
        <ul class="list-disc list-inside text-red-700">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Profile Picture -->
    <div>
      <%= f.label :avatar, "Profile Picture", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.file_field :avatar,
            accept: "image/*",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg bg-white cursor-pointer" %>
    </div>

    <!-- Username -->
    <div>
      <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :username, class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
    </div>

    <!-- Email -->
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
    </div>

    <!-- Password -->
    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
    </div>

    <!-- Confirm password -->
    <div>
      <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-gray-300 rounded-lg" %>
    </div>

    <%= f.submit "Sign Up",
          class: "w-full px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 cursor-pointer" %>

  <% end %>
</div>
