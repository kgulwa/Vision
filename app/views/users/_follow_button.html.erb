<% if current_user.following?(user) %>
  <%= button_to "Unfollow",
        user_follow_path(user),
        method: :delete,
        form: { data: { turbo_stream: true } },
        class: "px-4 py-2 bg-gray-200 text-gray-800 rounded-lg" %>
<% else %>
  <%= button_to "Follow",
        user_follow_path(user),
        method: :post,
        form: { data: { turbo_stream: true } },
        class: "px-4 py-2 bg-blue-600 text-white rounded-lg" %>
<% end %>
