<div class="max-w-md mx-auto mt-6 p-4 bg-white rounded-xl shadow">
  <h2 class="text-xl font-semibold mb-4">Edit Comment</h2>

  <%= form_with model: [@pin, @comment] do |f| %>
    <div class="mb-4">
      <%= f.label :content, "Your Comment", class: "block text-sm font-medium" %>

      <div class="relative w-full" data-controller="mentions">
        <%= f.text_area :content,
            rows: 4,
            class: "w-full p-2 border rounded",
            data: {
              action: "input->mentions#search",
              mentions_target: "input"
            } %>

        <div data-mentions-target="dropdown"
             class="absolute left-0 top-full mt-1 w-full bg-white border rounded-lg shadow hidden z-50">
        </div>
      </div>
    </div>

    <div class="flex justify-between">
      <%= f.submit "Update Comment", class: "px-4 py-2 bg-blue-600 text-white rounded" %>

      <%= link_to "Cancel", pin_path(@pin), class: "px-4 py-2 bg-gray-300 rounded" %>
    </div>
  <% end %>
</div>
