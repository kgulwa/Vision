<div class="max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Explore Pins</h1>
    <% if logged_in? %>
      <%= link_to new_pin_path, class: "px-6 py-2 bg-blue-600 text-white rounded-full hover:bg-blue-700 flex items-center space-x-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <span>Create Pin</span>
      <% end %>
    <% end %>
  </div>

  <% if @pins.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <%= render partial: 'pin_card', collection: @pins, as: :pin %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <h3 class="text-xl font-semibold text-gray-700 mb-2">No pins yet</h3>
      <p class="text-gray-500">Be the first to create a pin!</p>
    </div>
  <% end %>
</div>