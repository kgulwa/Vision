<aside class="fixed left-0 top-14 w-56 h-[calc(100vh-3.5rem)] bg-white border-r border-gray-200 overflow-y-auto">
  <nav class="py-3 px-2 space-y-1">
    <%= link_to root_path, class: "flex items-center space-x-4 px-3 py-2.5 rounded-lg hover:bg-gray-100 transition-colors #{current_page?(root_path) ? 'bg-gray-100 font-semibold' : ''}" do %>
      <svg class="w-5 h-5 #{current_page?(root_path) ? 'text-red-600' : 'text-gray-700'}" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
      </svg>
      <span class="text-sm">Home</span>
    <% end %>

    <%= link_to pins_path, class: "flex items-center space-x-4 px-3 py-2.5 rounded-lg hover:bg-gray-100 transition-colors #{current_page?(pins_path) ? 'bg-gray-100 font-semibold' : ''}" do %>
      <svg class="w-5 h-5 #{current_page?(pins_path) ? 'text-red-600' : 'text-gray-700'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
      </svg>
      <span class="text-sm">Explore</span>
    <% end %>

    <%= link_to current_user, class: "flex items-center space-x-4 px-3 py-2.5 rounded-lg hover:bg-gray-100 transition-colors #{current_page?(current_user) ? 'bg-gray-100 font-semibold' : ''}" do %>
      <svg class="w-5 h-5 #{current_page?(current_user) ? 'text-red-600' : 'text-gray-700'}" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
      </svg>
      <span class="text-sm">Your Profile</span>
    <% end %>

    <hr class="my-3">

    <div class="px-3 py-2">
      <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Following</h3>
    </div>

    <% if current_user.following.any? %>
      <% current_user.following.limit(8).each do |user| %>
        <%= link_to user, class: "flex items-center space-x-3 px-3 py-2 rounded-lg hover:bg-gray-100 transition-colors" do %>
          <div class="w-6 h-6 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center text-white text-xs font-bold flex-shrink-0">
            <%= user.username[0].upcase %>
          </div>
          <span class="text-sm text-gray-700 truncate"><%= user.username %></span>
        <% end %>
      <% end %>
    <% else %>
      <div class="px-3 py-2 text-xs text-gray-500">
        Not following anyone yet
      </div>
    <% end %>
  </nav>
</aside>