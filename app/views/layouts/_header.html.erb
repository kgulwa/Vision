<!-- Right Side -->
<div class="flex items-center space-x-4">
  <% if logged_in? && current_user.present? %>

    <!-- Create Button -->
    <%= link_to new_pin_path, class: "flex items-center space-x-2 px-3 py-1.5 bg-red-600 text-white text-sm rounded-full hover:bg-red-700 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      <span class="font-medium">Create</span>
    <% end %>

    <!-- Profile Dropdown -->
    <div class="relative">
      <!-- Hidden Checkbox Toggle -->
      <input type="checkbox" id="profile-toggle" class="sr-only peer" />

      <!-- Profile Icon Label -->
      <label for="profile-toggle" class="flex items-center space-x-2 p-1.5 rounded-full cursor-pointer hover:bg-gray-100">
        <div class="w-8 h-8 bg-gradient-to-br from-red-500 to-pink-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
          <%= current_user.username[0].upcase %>
        </div>
      </label>

      <!-- Dropdown Menu -->
      <div class="absolute right-2 mt-2 w-56 bg-white rounded-xl shadow-xl py-2 border border-gray-100 hidden peer-checked:block z-50">

        <!-- View Profile -->
        <%= link_to user_path(current_user), class: "flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50" do %>
          <div class="w-10 h-10 bg-gradient-to-br from-red-500 to-pink-500 rounded-full flex items-center justify-center text-white font-bold mr-3">
            <%= current_user.username[0].upcase %>
          </div>
          <div>
            <div class="font-semibold text-sm"><%= current_user.username %></div>
            <div class="text-xs text-gray-500">View Profile</div>
          </div>
        <% end %>

        <hr class="my-2">

        <!-- Settings -->
        <%= link_to edit_user_path(current_user), class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" do %>
          <svg class="w-4 h-4 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 
              1.724 0 002.573 1.066c1.543-.94 3.31.826 
              2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 
              1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 
              2.573c.94 1.543-.826 3.31-2.37 
              2.37a1.724 1.724 0 00-2.572 1.065c-.426 
              1.756-2.924 1.756-3.35 0a1.724 1.724 
              0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 
              1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 
              0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 
              2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Settings
        <% end %>

        <!-- Logout -->
        <%= button_to logout_path, method: :delete, class: "w-full flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 text-left" do %>
          <svg class="w-4 h-4 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 
              0 01-3 3H6a3 3 0 01-3-3V7a3 3 
              0 013-3h4a3 3 0 013 3v1" />
          </svg>
          Sign out
        <% end %>

      </div>
    </div>

  <% else %>
    <!-- Not logged in -->
    <div class="flex items-center space-x-3">
      <%= link_to "Sign In", login_path, class: "px-4 py-2 text-sm text-blue-600 font-medium hover:bg-blue-50 rounded-lg" %>
      <%= link_to "Sign Up", new_user_path, class: "px-4 py-2 text-sm bg-red-600 text-white font-medium rounded-full hover:bg-red-700" %>
    </div>
  <% end %>
</div>
