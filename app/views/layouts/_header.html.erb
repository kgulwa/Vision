<header class="fixed top-0 left-0 right-0 bg-white border-b border-gray-200 z-50 h-16">
  <div class="flex items-center justify-between h-full px-4">
    <!-- Logo -->
    <div class="flex items-center space-x-4">
      <%= link_to root_path, class: "flex items-center space-x-2" do %>
        <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
        </svg>
        <span class="text-xl font-bold text-gray-900">Vision</span>
      <% end %>
    </div>

    <!-- Search Bar -->
    <div class="flex-1 max-w-2xl mx-4">
      <%= form_with url: search_path, method: :get, class: "flex" do |f| %>
        <div class="flex w-full">
          <%= f.text_field :query, 
              placeholder: "Search pins...", 
              class: "flex-1 px-4 py-2 border border-gray-300 rounded-l-full focus:outline-none focus:border-blue-500",
              value: params[:query] %>
          <%= f.submit "Search", class: "px-6 py-2 bg-gray-100 border border-l-0 border-gray-300 rounded-r-full hover:bg-gray-200 cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <!-- Right Side -->
    <div class="flex items-center space-x-4">
      <% if logged_in? %>
        <%= link_to new_pin_path, class: "flex items-center space-x-2 px-4 py-2 bg-blue-600 text-white rounded-full hover:bg-blue-700" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          <span class="font-medium">Upload</span>
        <% end %>
        
        <!-- Profile Dropdown -->
        <div class="relative group">
          <button class="flex items-center space-x-2 p-2 rounded-full hover:bg-gray-100">
            <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold">
              <%= current_user.username[0].upcase %>
            </div>
          </button>
          
          <div class="hidden group-hover:block absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 border border-gray-200">
            <%= link_to current_user, class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" do %>
              <div class="font-medium"><%= current_user.username %></div>
              <div class="text-sm text-gray-500">View Profile</div>
            <% end %>
            <hr class="my-2">
            <%= link_to "Settings", edit_user_path(current_user), class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" %>
            <%= button_to "Logout", logout_path, method: :delete, class: "block w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100" %>
          </div>
        </div>
      <% else %>
        <%= link_to "Sign In", login_path, class: "px-6 py-2 text-blue-600 font-medium hover:bg-blue-50 rounded-full" %>
        <%= link_to "Sign Up", new_user_path, class: "px-6 py-2 bg-blue-600 text-white font-medium rounded-full hover:bg-blue-700" %>
      <% end %>
    </div>
  </div>
</header>