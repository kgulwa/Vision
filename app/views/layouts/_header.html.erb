<header class="fixed top-0 left-0 right-0 bg-white border-b border-gray-200 z-50 h-14 shadow-sm">
  <div class="flex items-center justify-between h-full px-4">
    <!-- Logo -->
    <div class="flex items-center space-x-4">
      <%= link_to root_path, class: "flex items-center space-x-2" do %>
        <svg class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
        </svg>
        <span class="text-xl font-bold text-gray-900">Vision</span>
      <% end %>
    </div>

    <!-- Search Bar -->
    <div class="flex-1 max-w-2xl mx-4">
      <%= form_with url: search_path, method: :get, class: "flex" do |f| %>
        <div class="flex w-full">
          <%= f.text_field :query, 
              placeholder: "Search", 
              class: "flex-1 px-4 py-2 text-sm border border-gray-300 rounded-l-full focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500",
              value: params[:query] %>
          <button type="submit" class="px-5 py-2 bg-gray-100 border border-l-0 border-gray-300 rounded-r-full hover:bg-gray-200">
            <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </button>
        </div>
      <% end %>
    </div>

    <!-- Right Side -->
    <div class="flex items-center space-x-4">
      <% if logged_in? %>
        <%= link_to new_pin_path, class: "flex items-center space-x-2 px-3 py-1.5 bg-red-600 text-white text-sm rounded-full hover:bg-red-700 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          <span class="font-medium">Create</span>
        <% end %>

        <!-- Profile Dropdown -->
        <div class="relative group">
          <button class="flex items-center space-x-2 p-1.5 rounded-full hover:bg-gray-100">
            <div class="w-8 h-8 bg-gradient-to-br from-red-500 to-pink-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
              <%= current_user.username[0].upcase %>
            </div>
          </button>

          <div class="hidden group-hover:block absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-xl py-2 border border-gray-100">
            <%= link_to current_user, class: "flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50" do %>
              <div class="w-10 h-10 bg-gradient-to-br from-red-500 to-pink-500 rounded-full flex items-center justify-center text-white font-bold mr-3">
                <%= current_user.username[0].upcase %>
              </div>
              <div>
                <div class="font-semibold text-sm"><%= current_user.username %></div>
                <div class="text-xs text-gray-500">View Profile</div>
              </div>
            <% end %>
            <hr class="my-2">
            <%= link_to edit_user_path(current_user), class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50" do %>
              <svg class="w-4 h-4 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              Settings
            <% end %>
            <%= button_to logout_path, method: :delete, class: "w-full flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 text-left" do %>
              <svg class="w-4 h-4 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
              Sign out
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="flex items-center space-x-3">
          <%= link_to "Sign In", login_path, class: "px-4 py-2 text-sm text-blue-600 font-medium hover:bg-blue-50 rounded-lg" %>
          <%= link_to "Sign Up", new_user_path, class: "px-4 py-2 text-sm bg-red-600 text-white font-medium rounded-full hover:bg-red-700" %>
        </div>
      <% end %>
    </div>
  </div>
</header>
