<div class="max-w-7xl mx-auto px-0 bg-white min-h-screen pb-20">
  <div class="flex items-center justify-between px-4 mb-6 pt-4">
    <h1 class="text-2xl font-bold text-gray-900">Explore Pins</h1>

    <% if logged_in? %>
      <%= link_to new_pin_path, class: "px-5 py-2.5 bg-red-600 text-white text-sm font-semibold rounded-full hover:bg-red-700 flex items-center space-x-2 shadow-md hover:shadow-lg transition-all" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <span>Create Pin</span>
      <% end %>
    <% end %>
  </div>

  <% if @pins.any? %>
    <div class="columns-2 sm:columns-3 md:columns-4 lg:columns-5 gap-2 [column-fill:_balance] px-2">

      <% @pins.each do |pin| %>
        <div class="relative break-inside-avoid mb-2 group">

          <%= link_to pin_path(pin), class: "block rounded-xl overflow-hidden transition-all duration-300 hover:scale-[1.02]" do %>

            <% if pin.file.attached? %>

              <% if pin.file.content_type.start_with?("video") %>
                <!-- VIDEO THUMBNAIL -->
                <video class="w-full h-auto rounded-xl" muted playsinline>
                  <source src="<%= url_for(pin.file) %>" type="<%= pin.file.content_type %>">
                </video>

              <% elsif pin.file.content_type.start_with?("image") %>
                <!-- IMAGE -->
                <%= image_tag pin.file, class: "w-full h-auto rounded-xl" %>

              <% else %>
                <!-- FALLBACK -->
                <div class="aspect-[3/4] bg-gray-200 flex items-center justify-center rounded-xl">
                  <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
              <% end %>

            <% else %>
              <!-- NO FILE ATTACHED -->
              <div class="aspect-[3/4] bg-gray-200 flex items-center justify-center rounded-xl">
                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
            <% end %>

            <!--  HOVER OVERLAY -->
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-40 transition-all duration-300 flex items-center justify-center opacity-0 group-hover:opacity-100">

              <div class="flex space-x-6 text-white font-semibold text-lg">
                <div class="flex items-center space-x-1">
                  <svg class="w-6 h-6" fill="white" viewBox="0 0 24 24">
                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 
                             2 5.42 4.42 3 7.5 3c1.74 0 3.41 0.81 4.5 2.09 
                             C13.09 3.81 14.76 3 16.5 3 
                             19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 
                             11.54L12 21.35z"/>
                  </svg>
                  <span><%= pin.likes.count %></span>
                </div>

                <div class="flex items-center space-x-1">
                  <svg class="w-6 h-6" fill="white" viewBox="0 0 24 24">
                    <path d="M21 6h-2v9H7v2c0 .55.45 1 1 1h9l4 
                             4V7c0-.55-.45-1-1-1zm-4 7V3c0-.55-.45-1-1-1H3
                             c-.55 0-1 .45-1 1v14l4-4h9c.55 0 1-.45 1-1z"/>
                  </svg>
                  <span><%= pin.comments.count %></span>
                </div>
              </div>

            </div>
            <!-- END OVERLAY -->

          <% end %>
        </div>
      <% end %>

    </div>

  <% else %>
    <div class="text-center py-16 bg-white rounded-2xl">
      <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <h3 class="text-xl font-semibold text-gray-700 mb-2">No pins yet</h3>
      <p class="text-gray-500">Be the first to create a pin!</p>
    </div>
  <% end %>
</div>
