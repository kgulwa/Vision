<div class="max-w-6xl mx-auto">
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="grid md:grid-cols-2 gap-0">
      <!-- Image Section -->
      <div class="bg-gray-900">
        <% if @pin.image.attached? %>
          <%= image_tag @pin.image, class: "w-full h-full object-cover" %>
        <% else %>
          <div class="w-full h-96 bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
            <svg class="w-32 h-32 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        <% end %>
      </div>
      <!-- Details Section -->
      <div class="p-6 flex flex-col">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
          <%= link_to @pin.user, class: "flex items-center space-x-3 hover:bg-gray-50 rounded-lg p-2 -m-2" do %>
            <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold text-lg">
              <%= @pin.user.username[0].upcase %>
            </div>
            <div>
              <div class="font-semibold text-gray-900"><%= @pin.user.username %></div>
              <div class="text-sm text-gray-500"><%= @pin.user.followers.count %> followers</div>
            </div>
          <% end %>
          <% if logged_in? %>
            <% if @pin.user == current_user %>
              <div class="flex space-x-2">
                <%= link_to edit_pin_path(@pin), class: "px-4 py-2 text-blue-600 hover:bg-blue-50 rounded-lg", aria: { label: "Edit Pin" } do %>
                  Edit
                <% end %>
                <%= button_to @pin, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "px-4 py-2 text-red-600 hover:bg-red-50 rounded-lg", aria: { label: "Delete Pin" } do %>
                  Delete
                <% end %>
              </div>
            <% else %>
              <% if current_user.following?(@pin.user) %>
                <%= button_to user_follow_path(@pin.user), method: :delete, class: "px-6 py-2 border border-gray-300 text-gray-700 rounded-full hover:bg-gray-50", aria: { label: "Unfollow User" } do %>
                  Following
                <% end %>
              <% else %>
                <%= button_to user_follow_path(@pin.user), method: :post, class: "px-6 py-2 bg-blue-600 text-white rounded-full hover:bg-blue-700", aria: { label: "Follow User" } do %>
                  Follow
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </div>
        <!-- Title & Description -->
        <div class="mb-6">
          <h1 class="text-3xl font-bold text-gray-900 mb-3"><%= @pin.title %></h1>
          <% if @pin.description.present? %>
            <p class="text-gray-600"><%= @pin.description %></p>
          <% end %>
        </div>
        <!-- Actions -->
        <% if logged_in? %>
          <div class="flex items-center space-x-4 mb-6 pb-6 border-b">
            <!-- Like Button -->
            <% if current_user.liked?(@pin) %>
              <%= button_to pin_like_path(@pin), method: :delete, class: "flex items-center space-x-2 px-4 py-2 bg-red-100 text-red-600 rounded-full hover:bg-red-200", aria: { label: "Unlike Pin" } do %>
                <svg class="w-6 h-6 fill-current" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
                </svg>
                <span class="font-medium"><%= @pin.likes_count %></span>
              <% end %>
            <% else %>
              <%= button_to pin_like_path(@pin), method: :post, class: "flex items-center space-x-2 px-4 py-2 border border-gray-300 rounded-full hover:bg-gray-50", aria: { label: "Like Pin" } do %>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 20 20">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
                <span class="font-medium"><%= @pin.likes_count %></span>
              <% end %>
            <% end %>
            <!-- Repost Button -->
            <% if current_user.reposted?(@pin) %>
              <%= button_to pin_repost_path(@pin), method: :delete, class: "flex items-center space-x-2 px-4 py-2 bg-green-100 text-green-600 rounded-full hover:bg-green-200", aria: { label: "Remove Repost" } do %>
                <svg class="w-6 h-6 fill-current" viewBox="0 0 20 20">
                  <path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z"/>
                </svg>
                <span class="font-medium"><%= @pin.reposts_count %></span>
              <% end %>
            <% else %>
              <%= button_to pin_repost_path(@pin), method: :post, class: "flex items-center space-x-2 px-4 py-2 border border-gray-300 rounded-full hover:bg-gray-50", aria: { label: "Repost Pin" } do %>
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z"/>
                </svg>
                <span class="font-medium"><%= @pin.reposts_count %></span>
              <% end %>
            <% end %>
          </div>
        <% end %>
        <!-- Comments Section -->
        <div class="flex-1 overflow-y-auto max-h-[400px]">
          <h3 class="font-semibold text-gray-900 mb-4">Comments (<%= @pin.comments.where(parent_id: nil).count %>)</h3>
          <% if logged_in? %>
            <%= form_with model: [@pin, Comment.new], class: "mb-6" do |f| %>
              <div class="flex space-x-3">
                <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold flex-shrink-0">
                  <%= current_user.username[0].upcase %>
                </div>
                <div class="flex-1">
                  <%= f.text_area :content, rows: 3, placeholder: "Add a comment...", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                  <%= f.submit "Comment", class: "mt-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 cursor-pointer" %>
                </div>
              </div>
            <% end %>
          <% end %>
          <div class="space-y-4">
            <% @pin.comments.where(parent_id: nil).where.not(user_uid: nil).order(created_at: :asc).each do |comment| %>
              <%= render partial: "pins/comment", locals: { comment: comment } %>
            <% end %>
            <% if @pin.comments.where(parent_id: nil).empty? && !logged_in? %>
              <p class="text-center text-gray-500 py-8">No comments yet. <%= link_to "Sign in", login_path, class: "text-blue-600 hover:underline" %> to leave a comment.</p>
            <% elsif @pin.comments.where(parent_id: nil).empty? %>
              <p class="text-center text-gray-500 py-8">No comments yet. Be the first to comment!</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
