<%= form_with(model: pin) do |form| %>
  <% if pin.errors.any? %>
    <div style="color: red;">
      <h2><%= pluralize(pin.errors.count, "error") %> prohibited this pin from being saved:</h2>
      <ul>
        <% pin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title -->
  <div class="mb-4">
    <%= form.label :title, class: "font-semibold" %>
    <%= form.text_field :title, class: "w-full border p-2 rounded" %>
  </div>

  <!-- Description -->
  <div class="mb-4">
    <%= form.label :description, class: "font-semibold" %>
    <%= form.text_area :description, class: "w-full border p-2 rounded" %>
  </div>

  <!-- File Upload (Image or Video) -->
  <div class="mb-4">
    <%= form.label :file, "Upload Image or Video", class: "font-semibold block mb-1" %>
    <%= form.file_field :file, accept: "image/*,video/*", class: "w-full" %>
  </div>

  <!-- Thumbnail Upload  -->
  <% if pin.file.attached? && pin.file.video? %>
    <div class="mb-4">
      <%= form.label :thumbnail, "Choose Thumbnail (Image)", class: "font-semibold block mb-1" %>
      <%= form.file_field :thumbnail, accept: "image/*", class: "w-full" %>
    </div>
  <% end %>

  <!-- TAG PEOPLE -->
  <div data-controller="tag-people" class="mb-6">
    <label class="block mb-2 font-semibold">Tag People</label>

    <!-- Search box -->
    <input 
      type="text" 
      placeholder="Search users..." 
      class="border p-2 w-full rounded"
      data-tag-people-target="search" 
      data-action="input->tag-people#search"
    >

    <!-- Search results -->
    <div 
      data-tag-people-target="results" 
      class="bg-white border rounded mt-2 hidden"
    ></div>

    <!-- Selected users -->
    <div 
      data-tag-people-target="selected" 
      class="flex flex-wrap gap-2 mt-3"
    ></div>

    <!-- Hidden inputs for submission -->
    <div data-tag-people-target="hiddenFields"></div>
  </div>

  <!-- Submit -->
  <div>
    <%= form.submit "Post Pin", class: "bg-red-500 text-white px-6 py-2 rounded-full" %>
  </div>

  <div class="mt-4">
    <%= link_to "Back to Pins", pins_path, class: "text-red-500" %>
  </div>
<% end %>
