<%= form_with(model: pin) do |form| %>
  <% if pin.errors.any? %>
    <!-- Display validation errors if the pin fails to save -->
    <div style="color: red;">
      <h2><%= pluralize(pin.errors.count, "error") %> prohibited this pin from being saved:</h2>
      <ul>
        <% pin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title field -->
  <div>
    <%= form.label :title, style: "display: block;" %>
    <%= form.text_field :title %>
  </div>

  <!-- Description field -->
  <div>
    <%= form.label :description, style: "display: block;" %>
    <%= form.text_area :description %>
  </div>

  <!-- Image upload field -->
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %> <!--added image upload support with Active Storage -->
  </div>

  <!-- Submit button -->
  <div>
    <%= form.submit %>
  </div>
<% end %>
