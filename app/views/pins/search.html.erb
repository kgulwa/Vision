<div class="max-w-7xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-2">Search Results</h1>
    <% if @query.present? %>
      <p class="text-gray-600">
        Found <span class="font-semibold"><%= @pins.count %></span> 
        <%= "result".pluralize(@pins.count) %> for 
        "<span class="font-semibold"><%= @query %></span>"
      </p>
    <% end %>
  </div>

  <% if @pins.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <%= render partial: 'pins/pin_card', collection: @pins, as: :pin %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-xl">
      <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
      </svg>
      <h3 class="text-xl font-semibold text-gray-700 mb-2">No results found</h3>
      <p class="text-gray-500 mb-4">Try searching with different keywords</p>
      <%= link_to "Explore All Pins", pins_path, class: "inline-block px-6 py-2 bg-blue-600 text-white rounded-full hover:bg-blue-700" %>
    </div>
  <% end %>
</div>