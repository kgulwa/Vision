<div class="break-inside-avoid mb-4 rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow bg-white">
  <%= link_to pin_path(pin.uid) do %>
    <% if pin.image.attached? %>
      <%= image_tag url_for(pin.image), class: "w-full h-auto object-cover rounded-t-xl" %>
    <% end %>
  <% end %>
  <div class="p-4">
    <h3 class="font-semibold text-gray-800 mb-1"><%= pin.title %></h3>
    <p class="text-gray-500 text-xs mb-2">Posted by <%= pin.user&.username || "Deleted User" %></p>

    <% if current_user == pin.user %>
      <div class="flex space-x-2 mb-2">
        <%= link_to "Edit", edit_pin_path(pin.uid), class: "px-2 py-1 bg-blue-100 text-blue-600 rounded text-sm" %>
        <%= button_to "Delete", pin_path(pin.uid), method: :delete, data: { confirm: "Are you sure?" }, class: "px-2 py-1 bg-red-100 text-red-600 rounded text-sm" %>
      </div>
    <% end %>

    <div class="flex items-center space-x-4 text-sm text-gray-600">
