<div class="break-inside-avoid mb-4 rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow bg-white">
  <!-- Pin Image -->
  <%= link_to pin_path(pin) do %>
    <% if pin.image.attached? %>
      <%= image_tag url_for(pin.image), class: "w-full h-auto object-cover rounded-t-xl" %>
    <% else %>
      <div class="aspect-[3/4] bg-gray-200 flex items-center justify-center rounded-t-xl">
        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
      </div>
    <% end %>
  <% end %>

  <!-- Pin Info -->
  <div class="p-3">
    <h2 class="text-sm font-semibold text-gray-800 mb-1"><%= pin.title %></h2>

    <% if pin.description.present? %>
      <p class="text-xs text-gray-500 mb-2 line-clamp-2"><%= pin.description %></p>
    <% end %>

    <!-- Interaction Buttons -->
    <div class="flex justify-between items-center text-xs text-gray-500">
      <div class="flex space-x-3">
        <% if logged_in? %>
          <!-- Like -->
          <% if current_user.liked?(pin) %>
            <%= button_to pin_like_path(pin), method: :delete, class: "hover:text-red-600 flex items-center" do %>
              ‚ù§Ô∏è <span class="ml-1"><%= pin.likes_count %></span>
            <% end %>
          <% else %>
            <%= button_to pin_likes_path(pin), method: :post, class: "hover:text-red-600 flex items-center" do %>
              ü§ç <span class="ml-1"><%= pin.likes_count %></span>
            <% end %>
          <% end %>

          <!-- Repost -->
          <% if current_user.reposted?(pin) %>
            <%= button_to pin_repost_path(pin), method: :delete, class: "hover:text-green-600 flex items-center" do %>
              üîÑ <span class="ml-1"><%= pin.reposts_count %></span>
            <% end %>
          <% else %>
            <%= button_to pin_reposts_path(pin), method: :post, class: "hover:text-green-600 flex items-center" do %>
              üîÑ <span class="ml-1"><%= pin.reposts_count %></span>
            <% end %>
          <% end %>
        <% else %>
          <span class="flex items-center">‚ù§Ô∏è <span class="ml-1"><%= pin.likes_count %></span></span>
          <span class="flex items-center">üîÑ <span class="ml-1"><%= pin.reposts_count %></span></span>
        <% end %>
      </div>

      <!-- Comments -->
      <span class="flex items-center">üí¨ <span class="ml-1"><%= pin.comments_count %></span></span>
    </div>
  </div>
</div>
