<% sanitized_uid = @user.uid.delete("-") %>

<turbo-stream action="replace" target="follow_button_<%= sanitized_uid %>">
  <template>
    <%= render partial: "users/follow_button", formats: [:html], locals: { user: @user } %>
  </template>
</turbo-stream>

<turbo-stream action="update" target="follower_count_<%= sanitized_uid %>">
  <template>
    <%= @user.followers.count %>
  </template>
</turbo-stream>
