<div class="min-h-screen flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <%= link_to root_path, class: "inline-flex items-center space-x-2 mb-6" do %>
        <svg class="w-12 h-12 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
        </svg>
        <span class="text-2xl font-bold text-gray-900">Vision</span>
      <% end %>
      <h2 class="text-3xl font-bold text-gray-900">Welcome back</h2>
      <p class="mt-2 text-gray-600">Sign in to your account</p>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with url: login_path, method: :post, class: "space-y-6" do |f| %>
        <div>
          <%= label_tag :username, "Username", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= text_field_tag :username, nil, autofocus: true, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Enter your username" %>
        </div>

        <div>
          <%= label_tag :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= password_field_tag :password, nil, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Enter your password" %>
        </div>

        <%= submit_tag "Sign In", class: "w-full px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 cursor-pointer" %>
      <% end %>

      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          Don't have an account?
          <%= link_to "Sign Up", new_user_path, class: "font-medium text-blue-600 hover:text-blue-700" %>
        </p>
      </div>
    </div>
  </div>
</div>