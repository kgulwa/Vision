<div class="min-h-screen flex items-center justify-center py-12 px-4 bg-gray-50">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <%= link_to root_path, class: "inline-flex items-center space-x-2 mb-6" do %>
        <svg class="w-12 h-12 text-red-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
          <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
        </svg>
        <span class="text-2xl font-bold text-gray-900">Vision</span>
      <% end %>
      <h2 class="text-3xl font-bold text-gray-900">Welcome back</h2>
      <p class="mt-2 text-gray-600">Sign in to your account</p>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      
      <%= form_with url: login_path, method: :post, local: true,
          data: { controller: "login-validation", turbo: "false" },
          class: "space-y-6" do %>

        <% if flash[:alert] %>
          <div class="bg-red-50 border-l-4 border-red-500 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-700 font-medium">
                  <%= flash[:alert] %>
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Username Field -->
        <div>
          <%= label_tag :username, "Username", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= text_field_tag :username, params[:username],
              autofocus: true,
              data: { 
                login_validation_target: "username",
                action: "blur->login-validation#validateUsername"
              },
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 transition-colors",
              placeholder: "Enter your username" %>
          <p data-login-validation-target="usernameError" class="mt-1 text-sm text-red-600 hidden"></p>
        </div>

        <!-- Password Field -->
        <div>
          <%= label_tag :password, "Password", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= password_field_tag :password, nil,
              data: { 
                login_validation_target: "password",
                action: "blur->login-validation#validatePassword"
              },
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 transition-colors",
              placeholder: "Enter your password" %>
          <p data-login-validation-target="passwordError" class="mt-1 text-sm text-red-600 hidden"></p>
        </div>

        <%= submit_tag "Sign In", data: { login_validation_target: "submitButton" },
            class: "w-full px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 cursor-pointer transition-colors" %>
      <% end %>

      <div class="mt-6 text-center">
        <p class="text-sm text-gray-600">
          Don't have an account?
          <%= link_to "Sign Up", new_user_path, class: "font-medium text-red-600 hover:text-red-700" %>
        </p>
      </div>
    </div>
  </div>
</div>
