<div class="max-w-7xl mx-auto">
  <% if logged_in? %>
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Your Feed</h1>
    
    <% if @pins.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <%= render partial: 'pins/pin_card', collection: @pins, as: :pin %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">No pins yet</h3>
        <p class="text-gray-500 mb-4">Follow users to see their pins in your feed</p>
        <%= link_to "Explore Pins", pins_path, class: "inline-block px-6 py-2 bg-blue-600 text-white rounded-full hover:bg-blue-700" %>
      </div>
    <% end %>
  <% else %>
    <!-- Hero Section for Non-Logged In Users -->
    <div class="min-h-[80vh] flex items-center justify-center">
      <div class="text-center max-w-4xl mx-auto px-4">
        <div class="bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500 bg-clip-text text-transparent mb-6">
          <h1 class="text-7xl font-bold mb-4">WELCOME TO VISION</h1>
        </div>
        <p class="text-2xl text-gray-600 mb-8">Discover and share amazing visual content with the world</p>
        <div class="flex items-center justify-center space-x-4">
          <%= link_to "Sign In", login_path, class: "px-8 py-4 bg-white text-pink-600 font-bold text-lg rounded-full hover:bg-gray-100 shadow-lg border-2 border-pink-600" %>
          <%= link_to "Sign Up", new_user_path, class: "px-8 py-4 bg-gradient-to-r from-pink-500 to-red-500 text-white font-bold text-lg rounded-full hover:from-pink-600 hover:to-red-600 shadow-lg" %>
        </div>
        
        <!-- Feature highlights -->
        <div class="grid md:grid-cols-3 gap-8 mt-16">
          <div class="p-6">
            <svg class="w-16 h-16 mx-auto mb-4 text-pink-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
            </svg>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Discover</h3>
            <p class="text-gray-600">Explore amazing visual content from creators worldwide</p>
          </div>
          <div class="p-6">
            <svg class="w-16 h-16 mx-auto mb-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
            </svg>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Engage</h3>
            <p class="text-gray-600">Like, comment, and share your favorite pins</p>
          </div>
          <div class="p-6">
            <svg class="w-16 h-16 mx-auto mb-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
            </svg>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Create</h3>
            <p class="text-gray-600">Upload and share your own visual masterpieces</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>