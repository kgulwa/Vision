<nav class="bg-white shadow-md fixed top-0 left-0 right-0 z-50">
  <div class="container mx-auto px-4 py-3 flex items-center justify-between">
    <!-- Logo / Home -->
    <div>
      <%= link_to "Vision", root_path, class: "font-bold text-xl" %>
    </div>

    <!-- Search Bar -->
    <div class="flex-1 flex justify-center px-2">
      <div class="w-full max-w-lg">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <input
            type="text"
            name="query"
            placeholder="Search pins..."
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300"
            value="<%= params[:query] %>"
          />
        <% end %>
      </div>
    </div>

    <!-- Profile Icon / Dropdown -->
    <div class="relative" data-controller="dropdown">
      <% if logged_in? %>
        <button data-action="click->dropdown#toggle" class="flex items-center space-x-2 rounded-full border p-2 bg-gray-100 hover:bg-gray-200">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar.variant(resize_to_fill: [32, 32]), class: "w-8 h-8 rounded-full", alt: "Profile" %>
          <% else %>
            <div class="w-8 h-8 rounded-full bg-blue-500 text-white flex items-center justify-center">
              <%= current_user.username.first.upcase %>
            </div>
          <% end %>
          <span class="font-medium"><%= current_user.username %></span>
        </button>

        <!-- Dropdown Menu -->
        <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white border rounded-lg shadow-lg z-50">
          <%= link_to "My Profile", user_path(current_user), class: "block px-4 py-2 hover:bg-gray-100" %>
          <%= link_to "Edit Profile", edit_user_path(current_user), class: "block px-4 py-2 hover:bg-gray-100" %>
          <%= link_to "Settings", "#", class: "block px-4 py-2 hover:bg-gray-100" %>
          <%= button_to "Logout", logout_path, method: :delete, class: "w-full text-left px-4 py-2 hover:bg-gray-100" %>
        </div>
      <% else %>
        <%= link_to "Sign In", login_path, class: "px-4 py-2 bg-red-600 text-white rounded-full hover:bg-red-700 transition" %>
      <% end %>
    </div>
  </div>
</nav>
