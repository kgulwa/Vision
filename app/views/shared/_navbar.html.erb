<nav class="bg-white shadow-md fixed top-0 left-0 right-0 z-50">
  <div class="container mx-auto px-4 py-3 flex items-center justify-between">
    <!-- Logo / Home -->
    <div>
      <%= link_to "Vision", root_path, class: "font-bold text-xl" %>
    </div>

    <!-- Search Bar -->
    <div class="flex-1 flex justify-center px-2">
      <div class="w-full max-w-lg">
        <%= form_with url: search_path, method: :get, local: true do |f| %>
          <input
            type="text"
            name="query"
            placeholder="Search pins..."
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300"
            value="<%= params[:query] %>"
          />
        <% end %>
      </div>
    </div>

    <!-- Profile Icon / Dropdown -->
    <div class="relative">
      <button class="rounded-full border p-2 bg-gray-100 hover:bg-gray-200">
        <%= image_tag "https://via.placeholder.com/32", alt: "Profile", class: "w-8 h-8 rounded-full" %>

      </button>
      <!-- Dropdown (optional, hidden by default) -->
    </div>
  </div>
</nav>
