<div class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 hidden"
     data-modal-target="overlay">

  <div class="bg-white p-6 rounded-xl w-96 shadow-lg">
    <h2 class="text-xl font-semibold mb-4">Create Collection</h2>

    <%= form_with url: collections_path, method: :post do |f| %>
      <%= f.text_field :name, placeholder: "Collection name", 
            class: "w-full border px-3 py-2 rounded mb-4" %>

      <div class="flex justify-end space-x-3">
        <button 
          data-action="click->modal#close"
          class="px-4 py-2 bg-gray-200 rounded">
          Cancel
        </button>

        <%= f.submit "Create", 
            class: "px-4 py-2 bg-blue-600 text-white rounded" %>
      </div>
    <% end %>
  </div>
</div>
