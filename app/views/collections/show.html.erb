<div class="max-w-6xl mx-auto p-6">

  <!-- TITLE + ACTIONS -->
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold"><%= @collection.name %></h1>

    <div class="flex space-x-3">
      <!-- EDIT -->
      <%= link_to "Edit",
          edit_collection_path(@collection),
          class: "px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600" %>

      <!-- DELETE -->
      <%= button_to "Delete",
          collection_path(@collection),
          method: :delete,
          data: { turbo_confirm: "Delete this entire collection?" },
          class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700" %>
    </div>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">

    <% @collection.saved_pins.each do |saved_pin| %>
      <% pin = saved_pin.pin %>

      <div class="relative group rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition">

        <%= link_to pin_path(pin) do %>
          <% if pin.image.attached? %>
            <%= image_tag pin.image, class: "w-full h-40 object-cover rounded-lg" %>
          <% else %>
            <div class="w-full h-40 bg-gray-200 rounded-lg flex items-center justify-center">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
          <% end %>

          <h3 class="mt-2 font-medium text-gray-800"><%= pin.title %></h3>
        <% end %>

        <!-- REMOVE PIN BUTTON -->
        <%= button_to "Remove",
            collection_remove_pin_path(@collection, saved_pin.id),
            method: :delete,
            class: "absolute top-2 right-2 px-2 py-1 bg-red-600 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition" %>

      </div>
    <% end %>

  </div>
</div>
