<div class="max-w-md mx-auto p-6 bg-white rounded-xl shadow">

  <h1 class="text-2xl font-bold mb-4">Edit Collection</h1>

  <%= form_with model: @collection, url: collection_path(@collection), method: :patch do |f| %>

    <div class="mb-4">
      <%= f.label :name, "Collection name", class: "block font-semibold mb-1" %>
      <%= f.text_field :name, class: "w-full border px-3 py-2 rounded" %>
    </div>

    <div class="flex justify-end space-x-3">
      <%= link_to "Cancel",
          collection_path(@collection),
          class: "px-4 py-2 bg-gray-200 rounded" %>

      <%= f.submit "Save Changes",
          class: "px-4 py-2 bg-blue-600 text-white rounded" %>
    </div>

  <% end %>

</div>
